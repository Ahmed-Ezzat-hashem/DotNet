@model List<Project>
    @{
        ViewData["Title"] = "Index";
        int i = 1;
    }

<h1 style="color:white;">Project Data</h1>

<a asp-controller="Project" asp-action="Add" class="btn btn-warning">ADD <i class="fa-solid fa-user-plus"></i></a>
    <hr />
<table class="table table-striped table-striped-columns table-warning">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
            <th scope="col">Description</th>
                <th scope="col">Controller</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@(i++)</th>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>
                    <a asp-controller="Project" asp-action="getbyid" asp-route-id="@item.ID"><i class="fa-solid fa-circle-info" style="color: #1f5131;"></i></a>
                        -
                    <a asp-controller="Project" asp-action="Edit" asp-route-id="@item.ID"><i class="fa-regular fa-pen-to-square" style="color: #1f5120;"></i></a>
                        -
                    <a asp-controller="Project" asp-action="delete" asp-route-id="@item.ID"><i class="fa-regular fa-trash-can" style="color: #1f512b;"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

